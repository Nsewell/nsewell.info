.article
  .title
    %h2
      %a{ :href => @article.slug, :title => @article.title } 
        = @article.title
    %span
      posted
      %span.date= @article.published.strftime("%A, %d %B %Y")
    %span.post-author.vcard
      by
      %span.fn Nick Sewell

  .body
    = haml @article.template, :layout => false

  .tags
    %a{ :href => @article.slug, :title => @article.title } Permalink
      
    %span= @article.tags

