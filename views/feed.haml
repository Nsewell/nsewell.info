!!! xml
%feed{:xmlns => 'http://www.w3.org/2005/Atom'}
  %title The Lincolnshire Poacher
  %link{:href => 'http://thelincolnshirepoacher.com/feed.atom', :rel => 'self', :hreflang => 'en', :type => 'application/atom+xml'}/
  %link{:href => "http://thelincolnshirepoacher.com", :rel => "alternate", :hreflang => "en", :type => "text/html"}/

  %author
    %name Chris Lloyd
    %uri http://chrislloyd.com.au
    %email christopher.lloyd@gmail.com

  %icon http://thelincolnshirepoacher.com/favicon.ico

  %id tag:thelincolnshirepoacher.com,2009-10-08:/
  %updated= @articles.first.published.xmlschema

  - @articles.each do |article|
    %entry
      %id== tag:thelincolnshirepoacher.com,#{article.published.strftime('%Y-%m-%d')}:#{article_path(article)}
      %title{:type => "html"}= strip_tags(article.title)
      %published= article.published.xmlschema
      %updated= (article.updated || article.published).xmlschema
      %link{:href => "http://thelincolnshirepoacher.com#{article_path(article)}", :rel => 'alternate', :hreflang => 'en', :type => 'text/html'}/
      %content{:type => 'xhtml', 'xml:lang' => 'en', 'xml:base' => 'http://thelincolnshirepoacher.com'}
        %div{:xmlns => "http://www.w3.org/1999/xhtml"}= absoluteify_links(render_article(article))
